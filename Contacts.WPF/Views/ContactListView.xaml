<UserControl x:Class="Contacts.WPF.Views.ContactListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Contacts.WPF.Controls.ContactListView"
             xmlns:local="clr-namespace:Contacts.WPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <controls:ContactListControl Grid.Row="0" DataContext="{Binding}" />
        <Button Style="{DynamicResource Button_Regular}"
                    Command="{Binding NewContactCommand}"
                    Content="Add new contact"
                    Grid.Row="1" />
        </Grid>
</UserControl>