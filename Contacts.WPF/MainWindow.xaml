<Window x:Class="Contacts.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts.WPF"
        xmlns:contacts="clr-namespace:Contacts"
        xmlns:views="clr-namespace:Contacts.WPF.Views"
        mc:Ignorable="d"
        Style="{StaticResource View_Regular}"
        DataContext="{Binding MainViewModel, Source={x:Static contacts:ViewModelLocator.Instance}}"
        MinHeight="400" MinWidth="300"
        Height="480" Width="360"
        Title="Contacts">
    <Window.Resources>
        <DataTemplate DataType="{x:Type contacts:ContactListViewModel}">
            <views:ContactListView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type contacts:ContactViewModel}">
            <views:ContactView />
        </DataTemplate>
    </Window.Resources>

    <ContentControl Content="{Binding CurrentViewModel}" />
</Window>