<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Contacts.WPF.Styles">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml" />
        <ResourceDictionary Source="Fonts.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="TextBlock_Regular" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{StaticResource FontSize_Regular}" />
        <Setter Property="FontFamily" Value="{StaticResource FontFamily_Regular}" />
        <Setter Property="Foreground" Value="{StaticResource Brush_Text}" />
    </Style>

    <Style x:Key="TextBlock_Title" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlock_Regular}">
        <Setter Property="Foreground" Value="{StaticResource Brush_Title}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize_Small}" />
    </Style>
</ResourceDictionary>